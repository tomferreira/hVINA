<div id="status_info"></div>

<script type="text/javascript">
	<% if @cluster.status_ok? %>
		location.href = '<%= cluster_path(@cluster) %>';
	<% else %>
		function update_status () {
		  $.ajax({
			 type:     "GET",
			 url:      "<%= cluster_path(@cluster) %>.js",
			 dataType: "html",
			 success: function (res) {
				$('#status_info').html(res);
			 }
		  });
		}

		setTimeout(update_status, 3000);
	<% end %>
</script>